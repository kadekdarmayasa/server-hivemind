<%- include('../../templates/header.ejs') %>

<div id="wrapper">
  <%- include('../../templates/sidebar.ejs') %>
  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%- include('../../templates/top-bar.ejs') %>
      <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h3 mb-0 text-gray-800">Testimonies</h1>
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#addTestimony"
          >
            Add Testimony
          </button>
        </div>

        <%- include('../../templates/alert.ejs') %>

        <div class="row">
          <div class="card shadow mb-4 col-md-12">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Client Photo</th>
                      <th>Client Name</th>
                      <th>Occupation</th>
                      <th>Message</th>
                      <th>Rate</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% testimonies.forEach((testimony) => { %>
                    <tr>
                      <td><%= testimony.id %></td>
                      <td>
                        <img
                          src="/public/images/<%= testimony.client_photo  %>"
                          alt="<%= testimony.client_photo %>"
                          style="width: 50px"
                        />
                      </td>
                      <td><%= testimony.client_name %></td>
                      <td><%= testimony.occupation %></td>
                      <td><%= testimony.message %></td>
                      <td><%= testimony.rate %></td>
                      <td>
                        <form
                          action="/user/testimonies/<%= testimony.id %>?_method=DELETE"
                          method="post"
                        >
                          <button type="submit" class="btn btn-danger btn-circle btn-sm delete-btn">
                            <i class="fas fa-trash"></i>
                          </button>
                          <button
                            type="button"
                            class="btn btn-success btn-circle btn-sm update-btn"
                            data-toggle="modal"
                            data-target="#updateTestimony"
                            data-testimony-id="<%= testimony.id %>"
                            data-client-name="<%= testimony.client_name %>"
                            data-client-photo="<%= testimony.client_photo %>"
                            data-occupation="<%= testimony.occupation %>"
                            data-message="<%= testimony.message %>"
                            data-rate="<%= testimony.rate %>"
                          >
                            <i class="fas fa-edit"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <%- include('./add-modal.ejs') %> <%- include('./update-modal.ejs') %>
      </div>
    </div>
  </div>
</div>

<%- include('../../templates/logout-modal.ejs') %> <%- include('../../templates/scripts.ejs') %>
<script>
  $('.delete-btn')
    .toArray()
    .forEach(function (deleteButton) {
      $(deleteButton).on('click', function (event) {
        const confirmation = confirm('Are you sure you want to delete this testimony?');
        if (confirmation) $(this).submit();
        else event.preventDefault();
      });
    });

  $('.update-btn')
    .toArray()
    .forEach(function (updateButton) {
      $(updateButton).on('click', function (event) {
        $('#latestClientPhoto').attr('src', `/public/images/${$(this).data('client-photo')}`);
        $('#latestClientPhoto').attr('alt', $(this).data('client-name'));
        $('#testimonyId').val($(this).data('testimony-id'));
        $('#updateClientName').val($(this).data('client-name'));
        $('#updateOccupation').val($(this).data('occupation'));
        $('#updateMessage').val($(this).data('message'));
        $('#updateRate').val($(this).data('rate'));
      });
    });
</script>
