<%- include('../../templates/header.ejs') %>

<div id="wrapper">
  <%- include('../../templates/sidebar.ejs') %>
  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%- include('../../templates/top-bar.ejs') %>
      <div class="container-fluid">
        <%- include('../../templates/alert.ejs') %>

        <div
          class="card-body bg-white row justify-content-center"
          style="max-width: 800px; margin: auto"
        >
          <div class="col-md-12">
            <h1 class="h4 mb-0 text-gray-800">User Profile</h1>
            <hr />

            <div class="position-relative my-4" style="width: 160px; height: 160px">
              <img
                src="/public/images/<%= user.photo %>"
                alt="User Profile"
                class="mb-4 rounded-circle"
                style="width: 160px; height: 160px"
              />
              <input
                type="file"
                class="form-control"
                id="photo"
                accept="image/*"
                style="display: none"
              />
              <button
                type="button"
                id="fileSelect"
                class="btn btn-light btn-circle position-absolute border border-primary"
                style="bottom: 10px; right: 10px; width: 50px; height: 50px"
              >
                <i class="fa fa-edit text-primary"></i>
              </button>
            </div>

            <form action="/user/profile?_method=PUT" method="post">
              <input type="hidden" id="id" name="id" value="<%= user.id %>" />
              <div class="form-group" style="margin-top: -10px">
                <label for="name">Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  placeholder="Enter name..."
                  required
                  value="<%= user.name %>"
                />
              </div>
              <div class="form-group">
                <label for="name">Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  placeholder="Enter username..."
                  required
                  value="<%= user.username %>"
                />
              </div>
              <div class="form-group">
                <label for="roleId">Role ID</label>
                <select name="roleId" id="roleId" class="form-control" required>
                  <option value="">---</option>
                  <% roles.forEach((role) => { %> <% if(role.id === user.roleId) { %>
                  <option value="<%= role.id %>" selected><%= role.name %> (<%= role.id %>)</option>
                  <% } else { %>
                  <option value="<%= role.id %>"><%= role.name %> (<%= role.id %>)</option>
                  <% } %> <% }) %>
                </select>
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Enter email address..."
                  required
                  value="<%= user.email %>"
                />
              </div>
              <div class="form-group">
                <label for="linkedin">Linkedin</label>
                <input
                  type="text"
                  class="form-control"
                  id="linkedin"
                  name="linkedin"
                  placeholder="Enter linkedin username..."
                  required
                  value="<%= user.linkedin %>"
                />
              </div>
              <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('./update-modal.ejs') %> <%- include('./cropper-modal.ejs') %>
</div>

<%- include('../../templates/logout-modal.ejs') %> <%- include('../../templates/scripts.ejs') %>
<script>
  const fileSelect = $('#fileSelect');
  fileSelect.on('click', function () {
    $('#photo').click();
  });

  const cropperModal = $('#cropperModal');
  const editPhoto = document.getElementById('edit-photo');
  let reader, cropper, file;

  $('#photo').on('change', function (e) {
    const file = e.target.files[0];
    const done = (url) => {
      editPhoto.src = url;
      cropperModal.modal('show');
    };

    if (file) {
      if (URL) {
        done(URL.createObjectURL(file));
      } else {
        reader = new FileReader();
        reader.onload = function () {
          done(reader.result);
        };
        reader.readAsDataURL(file);
      }
    }
  });

  cropperModal
    .on('shown.bs.modal', () => {
      cropper = new Cropper(editPhoto, {
        aspectRatio: 1,
        viewMode: 3,
        moveable: true,
        preview: '#preview',
      });
    })
    .on('hidden.bs.modal', () => {
      cropper.destroy();
      cropper = null;
    });

  $('#crop').on('click', function () {
    canvas = cropper.getCroppedCanvas({
      width: 160,
      height: 160,
      imageSmoothingEnabled: true,
      imageSmoothingQuality: 'high',
    });

    canvas.toBlob(function (blob) {
      const file = new File([blob], 'profile.png', { type: 'image/png' });

      const formData = new FormData();
      formData.append('id', $('#id').val());
      formData.append('photo', file);

      $.ajax('/user/update-photo?_method=PUT', {
        method: 'POST',
        data: formData,
        processData: false,
        contentType: false,
        success: function (data) {
          cropperModal.modal('hide');
          location.reload();
        },
      });
    });
  });
</script>
