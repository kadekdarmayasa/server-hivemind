<%- include('../templates/header.ejs') %>

  <div id="wrapper">
    <%- include('../templates/sidebar.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../templates/top-bar.ejs') %>
            <div class="container-fluid">
              <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Services</h1>

                <% if(user.role.name==='Admin' ) { %>
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addService">
                    Add Service
                  </button>
                  <% } %>
              </div>

              <%- include('../templates/alert.ejs') %>

                <div class="row">
                  <div class="card shadow mb-4 col-md-12">
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                          <thead>
                            <tr>
                              <th>Thumbnail</th>
                              <th>Name</th>
                              <th>Description</th>
                              <% if(user.role.name==='Admin' ) { %>
                                <th>Actions</th>
                                <% } %>
                            </tr>
                          </thead>
                          <tbody>
                            <% services.forEach((service)=> { %>
                              <tr>
                                <td>
                                  <div style="
                            background-color: #2b3be5;
                            width: 60px;
                            padding: 1em;
                            border-radius: 10px;
                          ">
                                    <img src="/public/images/<%= service.thumbnail  %>" alt="<%= service.name %>"
                                      style="width: 100%" />
                                  </div>
                                </td>
                                <td>
                                  <%= service.name %>
                                </td>
                                <td>
                                  <%= service.description %>
                                </td>
                                <% if(user.role.name==='Admin' ) { %>
                                  <td>
                                    <form action="/services/<%= service.id %>?_method=DELETE" method="post">
                                      <button type="submit" title="Delete Service" data-toggle-tooltip
                                        class="btn btn-danger btn-circle btn-sm delete-btn">
                                        <i class="fas fa-trash"></i>
                                      </button>
                                      <button type="button" class="btn btn-success btn-circle btn-sm update-btn"
                                        data-toggle="modal" data-target="#updateService" title="Update Service"
                                        data-toggle-tooltip data-service-id="<%= service.id %>"
                                        data-service-thumbnail="<%= service.thumbnail %>"
                                        data-service-name="<%= service.name %>"
                                        data-service-description="<%= service.description %>">
                                        <i class="fas fa-edit"></i>
                                      </button>
                                    </form>
                                  </td>
                                  <% } %>
                              </tr>
                              <% }) %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
            </div>

            <%- include('./add-modal.ejs') %> <%- include('./update-modal.ejs') %>
        </div>
      </div>
  </div>

  <%- include('../templates/logout-modal.ejs') %> <%- include('../templates/scripts.ejs') %>
      <script>
        $('.delete-btn')
          .toArray()
          .forEach(function (deleteButton) {
            $(deleteButton).on('click', function (event) {
              const confirmation = confirm('Are you sure you want to delete this service?');
              if (confirmation) $(this).submit();
              else event.preventDefault();
            });
          });

        $('.update-btn')
          .toArray()
          .forEach(function (updateButton) {
            $(updateButton).on('click', function () {
              const serviceId = $(this).data('service-id');
              const updateForm = document.getElementById('updateForm');
              updateForm.setAttribute('action', `/services/${serviceId}?_method=PUT`)

              $('#latestClientThumbnail').attr(
                'src',
                `/public/images/${$(this).data('service-thumbnail')}`,
              );
              $('#latestClientThumbnail').attr('alt', $(this).data('service-name'));
              $('#updateServiceName').val($(this).data('service-name'));
              $('#updateDescription').val($(this).data('service-description'));
            });
          });
      </script>